<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/particlesimstartscreen2">

    <Button
        android:id="@+id/loadGameButton"
        android:layout_width="171dp"
        android:layout_height="67dp"
        android:background="@drawable/bluebutton"
        android:onClick="onLoadGame_pressed"
        android:text="@string/load_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="202dp"
        android:layout_height="86dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bluebutton"
        android:onClick="onNewGame_Pressed"
        android:text="Play"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/loadGameButton"
        app:layout_constraintEnd_toEndOf="@+id/loadGameButton"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/loadGameButton" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="167dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bluebutton"
        android:onClick="onSettings_Pressed"
        android:text="@string/settings"
        app:layout_constraintStart_toStartOf="@+id/loadGameButton"
        app:layout_constraintTop_toBottomOf="@+id/loadGameButton" />

</androidx.constraintlayout.widget.ConstraintLayout>